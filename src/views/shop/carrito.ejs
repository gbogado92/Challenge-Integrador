<%- include('./../partials/headerS') -%>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link
      rel="shortcut icon"
      href="../../img/isotype.svg"
      type="image/x-icon"
    /> -->
    <title>Carrito de compras</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link rel="stylesheet" href="../../css/carrito.css" />
    <link rel="stylesheet" href="../../css/index.css" />
  </head>

  <body>
    

    <main class="main-carrito container">
      <h1 class="cart-title">CARRITO DE COMPRAS</h1>

      <div class="cart-table">
        <article class="custom-table-header">
          <h3 class="custom-table-heading__detalle">DETALLE DE PRODUCTO</h3>
          <h3 class="custom-table-heading__cantidad">CANTIDAD</h3>
          <h3 class="custom-table-heading__total">TOTAL</h3>
        </article>

        <article class="cart-table__item">
          <div class="funko">
            <img
              class="funko__img"
              src="../../img/star-wars/baby-yoda-1.webp"
              alt="Baby Yoda Blueball - Producto de Star Wars"
            />
            <div class="funko__text">
              <h2 class="funko__text-title">BABY YODA BLUEBALL</h2>
              <p class="funko__text-licence">STARS WARS</p>
              <p class="funko__text-price">Precio: $1799,99</p>
            </div>
          </div>
          <div class="item__cart">
            <input
              class="item__input"
              type="text"
              name="quantity"
              id="quantity1"
              placeholder="0"
            />
            <div class="btnmasmenos">
              <button type="button" id="subtract" class="mp width-icon">
                <iconify-icon
                  icon="ic:baseline-minus"
                  style="color: white"
                ></iconify-icon>
              </button>
              <button type="button" id="add" class="mp width-icon">
                <iconify-icon
                  icon="ic:outline-plus"
                  style="color: white"
                ></iconify-icon>
              </button>
            </div>
          </div>

          <div class="cart-table__price">
            <p class="cart-table__total-price">$3599,98</p>
          </div>
          <button class="button-x">
            <iconify-icon id="button-x1" icon="tabler:xbox-x"></iconify-icon>
          </button>
        </article>

        <div class="cart-table__item">
          <div class="funko">
            <img
              class="funko__img"
              src="../../img/pokemon/pidgeotto-1.webp"
              alt="Pidgeotto - Producto de Pokemon"
            />
            <div class="funko__text">
              <h2 class="funko__text-title">PIDGEOTTO</h2>
              <p class="funko__text-licence">POKEMON</p>
              <p class="funko__text-price">Precio unitario: $1799,99</p>
            </div>
          </div>
          <div class="item__cart">
            <input
              class="item__input"
              type="text"
              name="quantity"
              id="quantity2"
              placeholder="0"
            />
            <div class="btnmasmenos">
              <button type="button" id="subtract" class="mp width-icon">
                <iconify-icon
                  icon="ic:baseline-minus"
                  style="color: white"
                ></iconify-icon>
              </button>
              <button type="button" id="add" class="mp width-icon">
                <iconify-icon
                  icon="ic:outline-plus"
                  style="color: white"
                ></iconify-icon>
              </button>
            </div>
          </div>

          <div class="cart-table__price">
            <p class="cart-table__total-price">$1799,99</p>
          </div>

          <button class="button-x">
            <iconify-icon id="button-x2" icon="tabler:xbox-x"></iconify-icon>
          </button>
        </div>
      </div>

      <section class="resumen">
        <article class="resumen__content">
          <div class="resumen__text">
            <h2 class="cart-title-resumen">RESUMEN</h2>
          </div>
          <div class="resumen__card">
            <div class="resumen__card-group">
              <div class="resumen__card-description">
                <span>CANTIDAD DE ELEMENTOS</span>
                <span>SUBTOTAL</span>
                <span>ENV√çO</span>
              </div>
              <div class="resumen__card-price">
                <span id="totalElements">0</span>
                <span id="subTotalPrice">0</span>
                <span>$0,00</span>
              </div>
            </div>
            <div class="resumen__card-group resumen__card-group--total">
              <span class="resumen__card-group--total-text">TOTAL</span>
              <span class="total-price" id="totalPrice">0</span>
            </div>
          </div>

          <a class="resumen-item__button" href="#">IR A PAGAR</a>
        </article>
      </section>
    </main>

    

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <%- include('./../partials/footerS') -%>
    <script src="../../javascript/cart.js"></script>
    <script src="../../javascript/menuhamb.js"></script>
  </body>
</html>
