<%- include('./../partials/headerA') -%>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>CREATE ITEM</title>
        <link rel="stylesheet" href="./../../css/createProduct.css">
    </head>

    <body>
        <main class="main container">
            <h1 class="main-title">CREAR NUEVO ITEM</h1>
            
            <form class="main-form" action="/admin/create" method="post" enctype="application/x-www-form-urlencoded">

                <section class="main-form__options">
                    <label class="main-form__options--label" for="categoria">Categoría:</label>
                    
                    <select class="main-form__options--select" name="category_id" id="categoria">
                         <% categories.map(category=>{%>
                            <option value="<%= category.category_id%>">
                              <%= category.category_name %>
                            </option>
                         <%})%>
                    </select>

                    <label class="main-form__options--label" for="licencia">Licencia:</label>
                    
                    <select class="main-form__options--select" name="licence_id" id="licencia">
                        <%licences.map(licence=>{%>
                            <option value="<%= licence.licence_id%>">
                              <%= licence.licence_name%>
                            </option>
                        <%})%>
                    </select>
                </section>
                <section class="main-form__product-name-description">
                    <section class="main-form__product-name-description--name">
                        <label class="main-form__product-name-description__label" for="nombre-producto">Nombre del producto:</label>
                        <input class="main-form__product-name-description__input" type="text" name="product_name" id="nombre" 
                        placeholder="Kakashi Hatake Shippuden Saga" required>

                    </section>
                    <div class="main-textarea">
                        <textarea class="main-form__product-name-description--textarea" name="product_description" id="descripcion" cols="100" rows="10" placeholder="Descripción del producto" required></textarea>
                    </div>
                </section>
                <section class="main-form__inputs">
                    <label class="main-form__inputs--label" for="sku">SKU:</label>
                    <input class="main-form__inputs--input" type="text" name="sku" id="sku" placeholder="SSK111AB001" required>
                    <label class="main-form__inputs--label" for="precio">Precio:</label>
                    <input class="main-form__inputs--input" type="text" name="price" id="precio" placeholder="$ 0.000,00" required>
                    <label class="main-form__inputs--label" for="stock">Stock:</label>
                    <input class="main-form__inputs--input" type="text" name="stock" id="stock" placeholder="0" required>
                </section>
                <section class="main-form__promo">
                    <label class="main-form__promo--label" for="descuento">Descuento:</label>
                    <input class="main-form__promo--input-c" type="text" name="discount" id="descuento" placeholder="0%" required>
                    <label class="main-form__promo--label" for="cuotas">Cuotas:</label >
                    <select class="main-form__promo--select" name="dues" id="cuotas" required>
                        
                        <option value="" disabled selected>3 Cuotas sin interés</option>
                        <option value="" selected>3 Cuotas sin interés</option>
                        <option value="">6 Cuotas sin interés</option>
                        <option value="">9 Cuotas sin interés</option>
                        <option value="">0</option>
                    </select>

                </section>
                <section class="main-form__images">
                    <label class="main-form__images--label" for="imagenes">Imágenes:</label>
                    <input class="main-form__images--input" type="file"  id="imagenes" name="image_front" accept="image/png, image/gif, image/jpeg, image/webp" multiple>
                </section>

                <section class="main-form__buttons">
                    <input class="main-form__buttons--button" type="submit" value="Agregar Producto">
                    <input class="main-form__buttons--button" type="reset" value="Limpiar">
                </section>
            </form>
        </main>

        <%- include('./../partials/footerA') -%>
        <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    </body>

</html>